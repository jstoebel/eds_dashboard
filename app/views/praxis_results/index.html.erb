
<%= link_to students_path, class: "btn btn-default back-link glyphicon glyphicon-arrow-left" do %>
  <i class=" link-text"> Back</i>
<% end %>

  <table class="listing table table-striped" summary="praxis list">
    <caption>   
      <h2>Praxis Results for <%= "#{@student.FirstName} #{@student.LastName}"%></h2>

      <div> <%= pluralize(@student.praxis_results.size, 'result') %>  found </div>

    </caption>

    <% if @student.praxis_results.size > 0  %>

          <tr class="header">
            <th>Test Name</th>
            <th>Date Taken</th>
            <th>Score</th>
            <th>Best Score as of Test Date</th>      
            <th>Cut Score</th>
          </tr>
          <% @student.praxis_results.each do |result| %>
          <tr class "<%= cycle('odd', 'even') %>">
      	  <td><%= PraxisTest.find(result.TestCode).TestName %></td>
      	  <td><%= result.TestDate.strftime("%m/%d/%Y")%> </td>
      	  <td><%= result.TestScore %></td>
          <td><%= result.BestScore %></td>   
      	  <td><%= result.CutScore %></td>
           <td class="actions">
              <%= link_to("Details", praxis_result_path(result.AltID), :class => "action details") %>

          </tr>

          <% end %>
          
    <% end %>

  </table>
</div>