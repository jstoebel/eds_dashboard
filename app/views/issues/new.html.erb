<%= link_to student_issues_path(@student.AltID), class: "btn btn-default back-link glyphicon glyphicon-arrow-left" do %>
  <i class=" link-text"> Back</i>
<% end %>

<div class="issue new">


  <%= form_for(:issue, :url => student_issues_path(@student.AltID) ) do |f| %>
	<h2>Open New Issue for <%=[@first_name, @last_name].join(' ')%></h2>
  	<%= error_messages_for(@issue) %>

	<table summary="Issue form fields">

	  <tr>
	    <th><%= f.label(:Name, "Name") %> </th>
	    <td><%= f.text_field(:Name) %></td>
	  </tr>

	  <tr>
	    <th><%= f.label(:Description, "Description") %></th>
	    <td> <%= f.text_area(:Description, :size => '30x10') %> </td>
	  </tr>

  	<tr>
	<th></th>
	<td>
    <div class="form-buttons">
      <%= submit_tag("Open Issue") %>


	</td>
	</tr>
    </div>	
	</table>



  <% end %>
</div>