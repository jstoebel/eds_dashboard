<%= link_to student_pgps_path(@student.AltID), class: "btn btn-default back-link glyphicon glyphicon-arrow-left" do %>
  <i class=" link-text"> Back</i>
<% end %>

<table class="vertical-table">
  <caption>
    
    <div class="header1">
      <%= "#{@first_name} #{@last_name}"%>
    </div>

    <div class="header2">
      <%= @pgp.goal_name %>
    </div>
  </caption>

  <tr>
    <th>Score</th>
      <td class="Add Score">
        <!-- glyh here if open -->
        <% if @pgp.score_submit == nil %>

            <div class="col-md-1">
              <span class="glyphicon glyphicon-exclamation-sign"></span>
            </div>

            <div class="col-md-1">
              Open
            </div>

        <% else %>
            <div class="col-md-1" id="glyph-no-space">
              <span class="glyphicon glyphicon-ok"></span>
            </div>

            <div class="col-md-1" id="text-no-space">
              Resolved
            </div>
        <% end #end of status conditional %>

      </td>
  </tr>

  <tr >
    <th>PGP Desription</th>
    <td class="wrap"><%= @pgp.description %></td>
  </tr>


</table>

