<%= link_to students_path, class: "btn btn-default back-link glyphicon glyphicon-arrow-left" do %>
  <i class=" link-text"> Back</i>
<% end %>

    </br>
    
  <div class="container-fluid">
    <table class="table table-striped">
      <div class="row">      
        <caption>
          <div class="header1 col-xs-12">Professional growth plans for <%= name_details(@student)%></div></br>

          <div class="header2 col-xs-12"> <%= pluralize(@student.pgps.size, "professional growth plan") + " found" %> </div>
            <div class="col-xs-1">
              <%= link_to new_student_pgp_path(@student.AltID), :class => "btn btn-info glyphicon glyphicon-plus action-large" do %>  
                  <span class="large-btn-text">New Professional Growth Plan</span>
              <% end %>         
            </div>
        </caption>
      </div>
          <% if @student.pgps.size > 0 %>
  
          <tr class="header">
            <th>Goal</th>
            <th>Date Created</th>
            <th>Goal Score</th>
          </tr>
          <% @pgps.each do |pgp| %>
          <tr>
            <td> <%= pgp.goal_name %></td>
            <td> <%= pgp.created_at.strftime("%m/%d/%Y")%> </td>

            <td>
              <% if pgp.latest_score.nil? %>    
                  Not Scored
              <% else %>
                  <%= pgp.latest_score.goal_score %>
              <% end %>
            </td>

            <td class="actions">
              <%= link_to pgp_path(pgp.id), :class => "btn btn-info action-small" do %>
                <span class="small-btn-text">Details</span>
                <% end %>
                
              <%= link_to("Score PGP", new_pgp_pgp_score_path(pgp.id), :class => "action details btn btn-info action-small issues")%>
              
              <%= link_to("View Scores", pgp_pgp_scores_path(pgp.id), :class => "action details btn btn-info action-small issues")%>
              <td>
              <%= button_to(pgp_path(pgp.id), { class: "btn btn-default", method: :delete, data: {confirm: "Are you sure you want to delete this professional growth plan?"}} ) do %>
                <span class="glyphicon glyphicon-trash"></span>
              <% end %>
              </td>
            </td>
          <% end %>
          </tr>
          <% end %>
    </table>
  </div>
     