<% @page_title = "Select Students" %>
<%= link_to assessment_version_student_scores_path(@ver_id), class: "btn btn-default back-link glyphicon glyphicon-arrow-left" do %>
  <i class=" link-text"> Back</i>
<% end %>
<div class="select students for scores">

    <div class="container">
      <table class="listing table table-striped" summary="Student Scores">
        <div class="row">          
          <caption>
            <div class="header1 col-xs-12">Created <%= @scores.size %> new score(s).</div></br>
          </caption>
        </div>
          <tr class="header">
            <th>Student</th>
            <th>Assessment Item</th>
            <th>Score</th>
            <th>Score Description</th>
          </tr>
          <% @scores.each do |score| %>
            <tr>
            <td><%= Student.find(score.student_id).FirstName %>
              <%= Student.find(score.student_id).LastName %></td>
            <td><%= score.assessment_item_id %></td>
            <td><%= score.item_level.ord %></td>
            <td><%= score.item_level.level %></td>
            <td><span class="glyphicon glyphicon-check" style="color:green"></span></td>
            </tr>
          <% end %>
          
          <% if @pending.size > 0 %>
              <td><h4><span class="glyphicon glyphicon-exclamation-sign" style="color:red"></span>   Couldn't find a student for <%= @pending.size%> score(s).</h4></td>
              <% @pending.each do |score| %>
                <tr>
                  <td><%= link_to pending_student_scores_path do%>
                    <class=" link-text">Assign scores to students </class>
                  <% end %></td>
                  <td><%= score.assessment_item_id %></td>
                  <td><%= score.item_level.ord %></td>
                  <td><%= score.item_level.level %></td>
                </tr>
              <% end %>
          <% end %>
