    
<!-- render a date picker

	params:
		f: form object
		field: filed the data is for (as symbol)
		default: the default date. Use "" for no default
 -->

    <%= f.text_field field, {:value => (default != "" ? default.strftime("%m/%d/%Y") : ""), 'data-behaviour' => 'datepicker'} %>

<script type="text/javascript">
    $('[data-behaviour~=datepicker]').datepicker({
        format: 'mm/dd/yyyy',
    });
</script>