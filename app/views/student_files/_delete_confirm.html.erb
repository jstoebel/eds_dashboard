<!-- Modal to confirm deletion of a file
  locals:
    doc: the object to be destroyed.
 -->

<!-- Button to trigger modal -->

  <button class="btn btn-danger glyphicon glyphicon-remove action-large" data-toggle="modal" data-backdrop="static" data-target= <%="#delete-file"+doc.id.to_s %> title="Delete File">
  </button>

  <!-- Modal -->
  <div class="modal fade" id= <%="delete-file"+doc.id.to_s %>  tabindex="-1" role="dialog" aria-labelledby= <%="delete-label"+doc.id.to_s %>   aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h3 class="modal-title" id= <%="delete-label"+doc.id.to_s%> 
            > 
            Delete File </h3>
        </div>
        <div class="modal-body">

          Are you sure you want to delete this file? </br>

          <h4><%= doc.doc_file_name %></h4>
        </div>
        <div class="modal-footer">

          <%= button_to "Delete Document", student_file_path(doc.id), :method => :delete  %>

        </div>

      </div>
    </div>
  </div>