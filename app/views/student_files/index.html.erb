<div class="index">

  <table class="listing summary student_files list table table-striped">
   
    <caption>        
        <div class="header1"> <%= name_details(@student, file_as = true) %></div></br>
        <div class="header2"><%= pluralize(@docs.size, 'file') %>  found </div>
      
        <div class="container">
          <div class="row">
            <div class="col-md-1 pull-right">
      		<%= render(partial: 'new') %>

              <%# link_to new_student_student_file_path(@student.AltID), :class => "btn btn-info glyphicon glyphicon-plus action-large" do %>  

<!--                   <span class="large-btn-text">Add New File</span> -->

              <%# end %>         

            </div>
          </div>

      </div>
    </caption>

    <% if @docs.size > 0  %>

          <tr class="header">
            <th>Document Name</th>
            <th>Size</th>
            <th>Updated On</th>

          
      	<% @docs.each do |doc|%>
          </tr>
    			<td><%= link_to(doc.doc_file_name, student_file_download_path(doc.id)) %></td>
    			<td><%= number_to_human_size doc.doc_file_size %></td>
    			<td><%= doc.doc_updated_at.strftime("%m/%d/%Y") %></td>

          <!-- end of for loop for content-->


            <td class="actions">
              <%= render(:partial => "delete_confirm", 
              :locals => {
                doc: doc
              })  %>
            </td>

          </tr>
  	   <% end %>
          
    <!-- end of main loop -->
    <% end %>   

  </table>
</div>