<%= link_to adm_tep_index_path, class: "btn btn-default back-link glyphicon glyphicon-arrow-left" do %>
  <i class=" link-text"> Back</i>
<% end %>
    
    <%= form_for(:adm_tep, :url => adm_tep_path(@application.id), method: :patch ) do |f| %>

    <h2>Edit TEP Application for <%= "#{@application.student.name_readable} (#{@application.banner_term.readable})" %></h2>
    <%= error_messages_for(@application) %> 

    <table summary="adm_tep form fields">

        <tr>
            <th><%= f.label(:TEPAdmit, "Admission Decision", ) %></th>

            <td><%= f.select(:TEPAdmit, 
                        {"Admitted" =>  true, "Not Admitted" => false},
                        {prompt: "Admission Decision"}, :class => "admit-choice") %></td>
        </tr>


        <tr>            
        <th>
            <%= f.label(:TEPAdmitDate, "Admit Date") %></th>

            <td>

            <%= render(partial: 'date_picker', :locals => {
                f: f,
                field: :TEPAdmitDate,
                default: Date.today
              } )%> 
            </td>
        

             <tr>
              <th><%= f.label(:Notes, "Comments") %></th>
              <td><%= f.text_area(:Notes, :side => '40x10') %></td>
            </tr>

            <td class="letter-attach">
                <%= f.file_field :letter %>
            </td>
        </tr>



        <tr>
            <td>
                <div class="form-buttons">
                    <%= submit_tag("Submit") %>
                </div>
            </td>   

        </tr> 
        </table>
        <% end %>         
</div>