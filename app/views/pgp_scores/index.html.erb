<%= link_to student_pgps_path(@student.AltID), class: "btn btn-default back-link glyphicon glyphicon-arrow-left" do %>
  <i class=" link-text"> Back</i>
<% end %>

    </br>
    
    <div class="container-fluid">
        
        
        
    <div class="container-fluid">
        <table class="table table-striped">
          <div class="row">      
            <caption>
              <div class="header1 col-xs-12">Professional growth plans scores for <%= name_details(@student)%></div></br>

              <div class="header2 col-xs-12"> <%= pluralize(@pgp.pgp_scores.size, "PGP score") + " found" %> </div>
                <div class="col-xs-1">
                  <%= link_to new_pgp_pgp_score_path(@student.AltID), :class => "btn btn-info glyphicon glyphicon-plus action-large" do %>  
                      <span class="large-btn-text">New PGP Score</span>
                  <% end %>         
                </div>
            </caption>
          </div>
            
  
              <tr class="header">
                <th>Score</th>
                <th>Score Reason(s)</th>
                <th>Date Scored</th>
              </tr>
              <% @pgp_scores.each do |pgp_score| %>
              <tr>
                <td> <%= pgp_score.goal_score %></td>
                <td> <%= pgp_score.score_reason %></td>
                <td> <%= pgp_score.created_at.strftime("%m/%d/%Y")%> </td>
     
                <td class="actions">
                  
                </td>
              <% end %>
              </tr>
             
        </table>
      </div>