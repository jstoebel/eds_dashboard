
    <%= error_messages_for(@assignment) %>

    <tr>
      <th> <%= f.label(:student_id, "Student:")%> </th>
      <td> <%= f.select(:student_id, @students.map{|s| [name_details(s, file_as=true), s.id]},
      {prompt: "Select a student"}, id: 'student_select') %></td>
    </tr>

    <tr>
      <th> <%= f.label(:clinical_teacher_id, "Teacher:")%> </th>
      <td> <%= f.select(:clinical_teacher_id, @teachers.map{|t| [t.name_readable(file_as = true), t.id]},
      {prompt: "Select a clinical teacher"}, id: "clinical_teacher_select") %></td>
    </tr>

    <tr>
      <th> <%= f.label(:transcript_id, "Course:")%> </th>
      <td> <%= f.select(:transcript_id,
        options_for_select([ [ @assignment.transcript.andand.course_code, @assignment.transcript.andand.id ] ], @assignment.transcript.andand.id),
        {},
        {prompt: "Select a Course", id: 'course_select', :class => 'programs_row' }
      ) %></td>
    </tr>


    <tr>
    <th> <%= f.label(:StartDate, "Start Date:") %></th>

    <td>
      <%= render(partial: 'date_picker', :locals => {
                f: f,
                field: :StartDate,
                default: current_term({:exact => false, :plan_b => :forward}).StartDate
              } )%>
    </td>
    </tr>


    <tr>
    <th> <%= f.label(:EndDate, "End Date:") %></th>

    <td>
      <%= render(partial: 'date_picker', :locals => {
                f: f,
                field: :EndDate,
                default: current_term({:exact => false, :plan_b => :forward}).EndDate
              } )%>
    </td>
    </tr>

  </table>
