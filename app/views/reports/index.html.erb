<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.12/b-1.2.2/b-html5-1.2.2/datatables.min.css"/>
<script type="text/javascript" src="https://cdn.datatables.net/v/dt/dt-1.10.12/b-1.2.2/b-html5-1.2.2/datatables.min.js"></script>


<% @page_title = "Student Reports" %>

<!-- insert back button -->
<div class="container-fluid">
  <!-- dropdown here  -->

  <% headers = ["B#",
    "Name",
    "Prog Status",
    "Program(s)",
    "Major 1",
    "Conc 1",
    "Major 2",
    "Conc 2",
    "Minors",
    "EDS150",
    "Taken 227/228",
    "Completed 227/228",
    "Term completing 227",
    "Term completing 227",
    "EDS440 or EDS470"
  ] %>

  <%= render(partial: "dropdown_checks",
    locals: {options: headers}) %>

  <div class="student reports index">
    <h2>Student Information:</h2>

    <table class="small" id="report" class="table table-striped" summary="Student Reports">
    </div>
    <thead>
      <tr class="header">
        <% headers.each do |header| %>
          <th><%= header %></th>
        <% end %>

      </tr>
    </thead>
    <tbody>
      <% @data.each do |stu| %>
      <tr>
        <td><%= stu[:Bnum] %></td>
        <td><%= stu[:name_readable] %></td>
        <td><%= stu[:prog_status] %></td>
        <td><%= stu[:ProgName] %></td>
        <td><%= stu[:CurrentMajor1]%></td>
        <td><%= stu[:concentration1]%></td>
        <td><%= stu[:CurrentMajor2]%></td>
        <td><%= stu[:concentration2]%></td>
        <td><%= stu[:CurrentMinors]%></td>
        <td><%= stu[:Latest_Term_EDS150]%></td>
        <td><%= stu[:Taken227_228]%></td>
        <td><%= stu[:Passed_227_228]%></td>
        <td><%= stu[:Latest_Completion_227]%></td>
        <td><%= stu[:Latest_Completion_228]%></td>
        <td><%= stu[:Latest_Term_EDS440_470]%></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
</div>
