<%= link_to clinical_sites_path, class: "btn btn-default back-link glyphicon glyphicon-arrow-left" do %>
  <i class=" link-text"> Back</i>
<% end %>

<div class="Site Delete">
  <h2>Delete Clinical Site</h2>

  <%= form_for(:clinical_site, :url => {:action => 'destroy', :id => @site.id}) do |f| %>
    <p>Deleting this site will also delete all teacher and assignment records associated with it.</p>
    <p><%= "Are you sure you want to permanently delete #{@site.SiteName}?"%> </p>
    <p><%= "You will also delete this many teachers: #{@site.clinical_teachers.size}"%></p>
    <p><%= "You will also delete this many assignments: #{@site.clinical_teachers.map{|i| i.clinical_assignments.size}.reduce(:i)}" %></p> 

    <div class="form-buttons">
        <td>
            <%= button_to(clinical_teachers_path, { class: "btn btn-default", method: :delete}) do %>
            <span style="color:red">Delete Site</span>
            <% end %>
        </td>
      
    </div>

  <% end %>
</div>