<% @page_title = "Students" %>


<div class="students index">

  <table class="listing table table-striped" summary="Student list">
    <caption>
      <h2>Students (<%= @students.size %> found) </h2>     
    </caption>
    <tr class="header">
      <th>B#</th>
      <th>First Name</th>
      <th>Middle Name</th>
      <th>Last Name</th>
      <th>Program Status</th>
    </tr>
    <% @students.each do |student| %>
    <tr class "<%= cycle('odd', 'even') %>">
	  <td><%= student.Bnum %></td>
	  <td><%= student.FirstName %> <%= student.PreferredFirst ? "(#{student.PreferredFirst})" : nil %></td>
	  <td><%= student.MiddleName %></td>
	  <td><%= student.LastName %> <%= student.PrevLast ? "(#{student.PrevLast})" : nil %></td>
	  <td><%= student.ProgStatus %></td>
    <td class="actions">

        <%= link_to student_path(student.AltID), :class => "btn btn-info action-small" do %>
              </br><span class="small-btn-text">Details</span>
            <% end %>

        <%= link_to student_praxis_results_path(student.AltID),:class => "btn btn-info action-small praxis" do %>
              </br><span class="small-btn-text"><%="Praxis Results (#{student.praxis_results.size})"%></span>
            <% end %>

        <%= link_to student_issues_path(student.AltID),:class => "btn btn-info action-small issues" do %>
              </br><span class="small-btn-text"><%="Issues (#{student.issues.size})"%></span>
            <% end %>



    	  <!-- action buttons to do more with an individual student:
    	  		see praxis scores
    	  		file an issue
    	  		see documents
    	  		key assessments
    	  		what else? -->

      </td>
    </tr>
    <% end %>
  </table>
</div>