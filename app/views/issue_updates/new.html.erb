<%= link_to student_issues_path(@student.AltID), class: "btn btn-default back-link glyphicon glyphicon-arrow-left" do %>
  <i class=" link-text"> Back</i>
<% end %>

<div class="issue new">


  <%= form_for(:issue_updates, :url => issue_issue_updates_path(@issue.IssueID)) do |update_form| %>
	<h2>New Update for <%=@issue.Name%></br></h2>

	 <h3><%=[@first_name, @last_name].join(' ')%></h3>
  	<%= error_messages_for(@update) %>
    <%= error_messages_for(@issue)  %>

	<table summary="Issue form fields">

      <tr>
        <th><%= update_form.label(:UpdateName, "Update Name:") %> </th>
        <td><%= update_form.text_field(:UpdateName) %></td>
      </tr>

	  <tr>
	    <th><%= update_form.label(:Description, "Description:") %></th>
	    <td> <%= update_form.text_area(:Description, :size => '30x10') %> </td>
	  </tr>

    <tr>
      <th>
        <%= update_form.label(:status, "Status of Update:") %>
      </th>
      <td> <%= update_form.select(:status, IssueUpdate::STATUSES.keys,
      {prompt: "Select a status"}) %></td>
    </tr>

  	<tr>
	<th></th>
	<td>
    <div class="form-buttons">
      <%= submit_tag("Submit Issue") %>


	</td>
	</tr>
    </div>
	</table>



  <% end %>
</div>
