<%= link_to assessment_versions_path, class: "btn btn-default back-link glyphicon glyphicon-arrow-left" do %>
  <i class=" link-text"> Back</i>
<% end %>

<%= form_for(@version, url: assessment_version_path(@version.id), :html => { :method => :put }) do |f| %>

	<table summary="assessment_version form fields">

    <caption>
    	<span class="header1"> Update Assessment Version</span>
    	<span class = "header2"><%= "#{@version.assessment.name}"%></span>

    </caption>

	<%= render(partial: 'edit_form', locals: {f: f}) %>

	<tr>
		<td><%= submit_tag("Update Version") %></td>
	</tr>

<% end %>
